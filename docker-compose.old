version: '3'

services:
  cabin_db:
    image: mysql:latest
    network_mode: "service:app"
    volumes:
      - "mysql_volume:/var/lib/mysql"
    restart: always
    ports:
      - 3306:3306
    environment:
      - MYSQL_ROOT_PASSWORD=rootpw
      - MYSQL_DATABASE=cabin
      - MYSQL_USER=cabin
      - MYSQL_PASSWORD=cabinpw
  app:
    build: .
    image: test-img
    depends_on:
      - cabin_db
    ports:
      - 8080:8080
    environment:
      - DATABASE_HOST=myapp-mysql
      - DATABASE_USER=cabin
      - DATABASE_PASSWORD=cabinpw
      - DATABASE_NAME=workshop_app
      - DATABASE_PORT=3306

volumes:
  mysql_volume:
    external: false

